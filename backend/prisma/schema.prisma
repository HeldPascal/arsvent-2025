// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id             String        @id @map("discord_id")
  username       String
  globalName     String?
  avatar         String?
  locale         String        @default("en")
  mode           String        @default("NORMAL") // "NORMAL" | "VETERAN"
  creatureSwap   Boolean       @default(false)
  isAdmin        Boolean       @default(false)
  isSuperAdmin   Boolean       @default(false)
  sessionVersion Int           @default(1)
  stateVersion   Int           @default(1)
  lastSolvedDay  Int           @default(0)
  lastSolvedAt   DateTime?
  lastDowngradedAt DateTime?
  lastDowngradedFromDay Int    @default(0)
  introCompleted Boolean       @default(false)
  lastLoginAt    DateTime?
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
}

model AppState {
  id          Int      @id
  unlockedDay Int      @default(0)
  updatedAt   DateTime @updatedAt
  updatedBy   String?
}

model AuditLog {
  id        Int      @id @default(autoincrement())
  action    String
  actorId   String?
  details   String?
  createdAt DateTime @default(now())
}
