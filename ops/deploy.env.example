## Required: deployment context
DEPLOY_ENV="production"
DEPLOY_DIR=""

## Required: registry owner
IMAGE_REGISTRY_OWNER=""

## Optional: app paths (absolute or relative to DEPLOY_DIR)
# APP_DIR="app"
# COMPOSE_FILE="app/ops/docker-compose.yml"
## Optional: app behavior
# BRANCH="main"
## Optional: compose naming
# COMPOSE_PROJECT_NAME="arsvent-production"

## Optional: env paths (absolute or relative to DEPLOY_DIR)
# ENV_DIR="env"
# BACKEND_ENV_FILE="env/backend.env"
# FRONTEND_ENV_FILE="env/frontend.env"
## Optional: ports
# BACKEND_PORT=4000
# FRONTEND_PORT=4173

## Optional: data paths (absolute or relative to DEPLOY_DIR)
# DATA_DIR="data"
# BACKEND_DATA_DIR="data/backend"
# REDIS_DATA_DIR="data/redis"
# DB_PATH="data/backend/prod.db"

## Optional: backups paths (absolute or relative to DEPLOY_DIR)
# BACKUPS_DIR="backups"
# DB_BACKUP_DIR="backups/backend-db"
## Optional: backups behavior
# BACKUPS_TO_KEEP="7"

## Optional: maintenance paths (absolute or relative to DEPLOY_DIR)
# MAINTENANCE_DIR="maintenance"
# MAINTENANCE_FLAG="maintenance/MAINTENANCE_ON"
## Optional: maintenance behavior
# NGINX_RELOAD_CMD="sudo systemctl reload nginx"

## Optional: release metadata paths (absolute or relative to DEPLOY_DIR)
# RELEASES_DIR="releases"

## Optional: image tag (can be passed as wrapper arg instead)
# IMAGE_TAG=""
